<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnShowAlert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Show Alert Dialog Box"
        tools:layout_editor_absoluteX="189dp"
        tools:layout_editor_absoluteY="47dp" />

    <Button
        android:id="@+id/btnMessageDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Message Dialog" />

    <Button
        android:id="@+id/btnCustomDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Custom Dialog" />

    <Button
        android:id="@+id/btnAlertList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show List Alert Dialog" />

    <Button
        android:id="@+id/btnShowAlertRadio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Alert List with Radio" />

    <Button
        android:id="@+id/btnShowAlertCheckbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Alert List with Checkbox" />

    <Button
        android:id="@+id/btnAlertButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Alert Buttons" />

</LinearLayout>